{
  "kind": "singleType",
  "collectionName": "heroes",
  "info": {
    "singularName": "hero",
    "pluralName": "heroes",
    "displayName": "Hero",
    "description": "Hero section for homepage"
  },
  "options": {
    "draftAndPublish": true,
    "preview": {
      "enabled": true,
      "config": {
        "url": "http://localhost:3000"
      }
    }
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "tagline": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "primaryButtonText": {
      "type": "string"
    },
    "primaryButtonLink": {
      "type": "string"
    },
    "secondaryButtonText": {
      "type": "string"
    },
    "secondaryButtonLink": {
      "type": "string"
    },
    "backgroundImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "backgroundVideos": {
      "type": "component",
      "repeatable": true,
      "component": "hero.background-video"
    },
    "overlayColor": {
      "type": "string"
    },
    "overlayOpacity": {
      "type": "decimal",
      "default": 0.5,
      "min": 0,
      "max": 1
    },
    "titleColor": {
      "type": "string"
    },
    "textColor": {
      "type": "string"
    },
    "primaryButtonColor": {
      "type": "string"
    },
    "secondaryButtonColor": {
      "type": "string"
    }
  }
}
